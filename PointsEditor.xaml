<Window x:Class="_3DRedactor.PointsEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DRedactor"
        mc:Ignorable="d"
        Title="PointsEditor" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="PointsList" d:ItemsSource="{d:SampleData ItemCount=0}" Margin="0,105,0,59"/>
        <TextBox x:Name="XBox" HorizontalAlignment="Left" Margin="79,71,0,0" TextWrapping="Wrap" Text="X координата" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="YBox" HorizontalAlignment="Left" Margin="366,71,0,0" TextWrapping="Wrap" Text="Y координата" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ZBox" HorizontalAlignment="Left" Margin="646,71,0,0" TextWrapping="Wrap" Text="Z координата" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddButton" Content="Добавить" HorizontalAlignment="Left" Margin="188,10,0,0" VerticalAlignment="Top" Height="34" Width="192" Click="AddButton_Click"/>
        <Button x:Name="DeleteButton" Content="Удалить" HorizontalAlignment="Left" Margin="482,10,0,0" VerticalAlignment="Top" Height="34" Width="192" Click="DeleteButton_Click"/>
        <Button x:Name="Ок" Content="Ок" HorizontalAlignment="Center" Margin="0,390,0,0" VerticalAlignment="Top" Height="34" Width="192" Click="Ок_Click"/>

    </Grid>
</Window>
