<Window x:Class="_3DRedactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DRedactor" xmlns:h="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="242.022"/>
            <RowDefinition Height="192*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <h:HelixViewport3D x:Name="ViewPoint" 
                          ShowCoordinateSystem="True" 
                          ZoomExtentsWhenLoaded="True" Margin="535,3,-1,174" RenderTransformOrigin="0.107,1.652" Grid.RowSpan="2">
            <h:HelixViewport3D.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.234"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.756"/>
                </TransformGroup>
            </h:HelixViewport3D.RenderTransform>

            <!-- Default Lights -->
            <h:DefaultLights/>

            <!-- Coordinate System Grid -->
            <h:GridLinesVisual3D Width="8" Length="8" MinorDistance="1" MajorDistance="1" 
                               Thickness="0.01"/>

        </h:HelixViewport3D>
        <Button x:Name="CreateButton" Content="Создать" HorizontalAlignment="Left" Margin="28,97,0,0" VerticalAlignment="Top" Width="136" Height="38" Click="CreateButton_Click"/>
        <TextBox x:Name="RotateAngleTextBox" HorizontalAlignment="Left" Margin="193,3,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="30" Grid.Row="1"/>
        <TextBox x:Name="TranslateYTextBox" HorizontalAlignment="Left" Margin="67,208,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="25" Height="20"/>
        <ListBox x:Name="FigureList" DisplayMemberPath="Name" d:ItemsSource="{d:SampleData ItemCount=0}" Margin="536,17,0,0" Grid.Row="1"/>
        <TextBox x:Name="TranslateXTextBox" HorizontalAlignment="Left" Margin="67,167,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="25" Height="20"/>
        <Label Content="X:" HorizontalAlignment="Left" Margin="35,164,0,0" VerticalAlignment="Top"/>
        <Label Content="Y:" HorizontalAlignment="Left" Margin="35,205,0,0" VerticalAlignment="Top"/>
        <Label Content="Угол:" HorizontalAlignment="Left" Margin="149,241,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <TextBox x:Name="TranslateZTextBox" HorizontalAlignment="Left" Margin="67,6,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="25" Grid.Row="1" Height="20"/>
        <Label Content="Z:" HorizontalAlignment="Left" Margin="35,3,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="ScaleYTextBox" HorizontalAlignment="Left" Margin="312,207,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="25" Height="20"/>
        <TextBox x:Name="ScaleXTextBox" HorizontalAlignment="Left" Margin="312,162,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="25" Height="20"/>
        <Label Content="X:" HorizontalAlignment="Left" Margin="280,159,0,0" VerticalAlignment="Top"/>
        <Label Content="Y:" HorizontalAlignment="Left" Margin="280,204,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ScaleZTextBox" HorizontalAlignment="Left" Margin="312,5,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="25" Grid.Row="1" Height="20"/>
        <Label Content="Z:" HorizontalAlignment="Left" Margin="280,2,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Button x:Name="DeleteButton" Content="Удалить" HorizontalAlignment="Left" Margin="188,97,0,0" VerticalAlignment="Top" Width="136" Height="38" Click="DeleteButton_Click"/>
        <Button x:Name="ClearButton" Content="Очистить" HorizontalAlignment="Left" Margin="341,97,0,0" VerticalAlignment="Top" Width="136" Height="38" Click="ClearButton_Click"/>
        <Button x:Name="TransformButton" Content="Трансформировать" HorizontalAlignment="Left" Margin="28,81,0,0" VerticalAlignment="Top" Width="136" Height="38" Grid.Row="1" Click="TransformButton_Click"/>
        <Button x:Name="ResetButton" Content="Сбросить трансформацию" HorizontalAlignment="Left" Margin="328,81,0,0" VerticalAlignment="Top" Width="162" Height="38" Grid.Row="1" Click="ResetButton_Click"/>
        <Label Content="Перемещение" HorizontalAlignment="Left" Margin="35,34,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Вращение" HorizontalAlignment="Left" Margin="175,33,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Маштабирование" HorizontalAlignment="Left" Margin="270,33,0,0" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>
</Window>
