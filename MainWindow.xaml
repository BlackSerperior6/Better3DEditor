<Window x:Class="_3DRedactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DRedactor" xmlns:h="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="3D Редактор" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="579*"/>
            <ColumnDefinition Width="76*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="242.022"/>
            <RowDefinition Height="192*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <h:HelixViewport3D x:Name="ViewPoint" 
                          ShowCoordinateSystem="True" 
                          ZoomExtentsWhenLoaded="True" Margin="390,3,-1,174" RenderTransformOrigin="0.107,1.652" Grid.RowSpan="2" Grid.Column="3" Grid.ColumnSpan="2">
            <h:HelixViewport3D.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.234"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.756"/>
                </TransformGroup>
            </h:HelixViewport3D.RenderTransform>

            <!-- Default Lights -->
            <h:DefaultLights/>

            <!-- Coordinate System Grid -->
            <h:GridLinesVisual3D Width="8" Length="8" MinorDistance="1" MajorDistance="1" 
                               Thickness="0.01"/>

        </h:HelixViewport3D>
        <Button x:Name="CreateButton" Content="Создать" HorizontalAlignment="Left" Margin="6,97,0,0" VerticalAlignment="Top" Width="136" Height="38" Click="CreateButton_Click" Grid.ColumnSpan="3" Grid.Column="1"/>
        <TextBox x:Name="RotateAngleTextBox" HorizontalAlignment="Left" Margin="48,3,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="30" Grid.Row="1" Grid.Column="3"/>
        <TextBox x:Name="TranslateYTextBox" HorizontalAlignment="Left" Margin="45,208,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="25" Height="20" Grid.Column="1"/>
        <ListBox x:Name="FigureList" DisplayMemberPath="Name" d:ItemsSource="{d:SampleData ItemCount=0}" SelectionMode="Extended" Margin="391,17,0,0" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TranslateXTextBox" HorizontalAlignment="Left" Margin="45,167,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="25" Height="20" Grid.Column="1"/>
        <Label Content="X:" HorizontalAlignment="Left" Margin="13,164,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Y:" HorizontalAlignment="Left" Margin="13,205,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Угол:" HorizontalAlignment="Left" Margin="4,241,0,0" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Column="3"/>
        <TextBox x:Name="TranslateZTextBox" HorizontalAlignment="Left" Margin="45,6,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="25" Grid.Row="1" Height="20" Grid.Column="1"/>
        <Label Content="Z:" HorizontalAlignment="Left" Margin="13,3,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
        <TextBox x:Name="ScaleYTextBox" HorizontalAlignment="Left" Margin="167,207,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="25" Height="20" Grid.Column="3"/>
        <TextBox x:Name="ScaleXTextBox" HorizontalAlignment="Left" Margin="167,162,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="25" Height="20" Grid.Column="3"/>
        <Label Content="X:" HorizontalAlignment="Left" Margin="135,159,0,0" VerticalAlignment="Top" Grid.Column="3"/>
        <Label Content="Y:" HorizontalAlignment="Left" Margin="135,204,0,0" VerticalAlignment="Top" Grid.Column="3"/>
        <TextBox x:Name="ScaleZTextBox" HorizontalAlignment="Left" Margin="167,5,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="25" Grid.Row="1" Height="20" Grid.Column="3"/>
        <Label Content="Z:" HorizontalAlignment="Left" Margin="135,2,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="3"/>
        <Button x:Name="DeleteButton" Content="Удалить" HorizontalAlignment="Left" Margin="43,97,0,0" VerticalAlignment="Top" Width="136" Height="38" Click="DeleteButton_Click" Grid.Column="3"/>
        <Button x:Name="ClearButton" Content="Очистить" HorizontalAlignment="Left" Margin="196,97,0,0" VerticalAlignment="Top" Width="136" Height="38" Click="ClearButton_Click" Grid.Column="3"/>
        <Button x:Name="TransformButton" Content="Трансформировать" HorizontalAlignment="Left" Margin="6,81,0,0" VerticalAlignment="Top" Width="136" Height="38" Grid.Row="1" Click="TransformButton_Click" Grid.ColumnSpan="3" Grid.Column="1"/>
        <Button x:Name="ResetButton" Content="Сбросить трансформацию" HorizontalAlignment="Left" Margin="183,81,0,0" VerticalAlignment="Top" Width="162" Height="38" Grid.Row="1" Click="ResetButton_Click" Grid.Column="3"/>
        <Label Content="Перемещение" HorizontalAlignment="Left" Margin="13,34,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Label Content="Вращение" HorizontalAlignment="Left" Margin="30,33,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="3"/>
        <Label Content="Маштабирование" HorizontalAlignment="Left" Margin="125,33,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="3"/>
        <DockPanel Grid.ColumnSpan="5">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Файл">
                    <MenuItem Header="Новый" Click="NewButton_Click"/>
                    <MenuItem Header="Открыть" Click="LoadButton_Click"/>
                    <MenuItem Header="Сохранить" Click="SaveButton_Click"/>
                    <MenuItem Header="Сохранить как" Click="SaveAsButton_Click"/>
                    <Separator/>
                    <MenuItem Header="Выход"/>
                </MenuItem>
            </Menu>

            <Grid>
                <TextBlock x:Name="FilePathText" HorizontalAlignment="Left" 
                       VerticalAlignment="Top" Margin="10" Foreground="Gray"/>
                <Label x:Name="PathLabel" Content="" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.338,-0.045" Width="780" Height="30"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
